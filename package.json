{
  "name": "quake2ts-explorer",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A web application to explore and view Quake II PAK file contents using quake2ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "generate-manifest": "node scripts/generate-pak-manifest.js",
    "dev": "npm run generate-manifest && vite",
    "build": "npm run generate-manifest && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:coverage": "vitest run --coverage --dir tests/unit",
    "test:watch": "vitest --dir tests/unit",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@uiw/color-convert": "^2.9.2",
    "@uiw/react-color-colorful": "^2.9.2",
    "@wasm-audio-decoders/ogg-vorbis": "^0.1.20",
    "comlink": "^4.4.2",
    "gl-matrix": "^3.4.4",
    "html2canvas": "^1.4.1",
    "jszip": "^3.10.1",
    "quake2ts": "0.0.762",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^2.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@napi-rs/canvas": "^0.1.82",
    "@quake2ts/test-utils": "0.0.762",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/html2canvas": "^1.0.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^1.6.0",
    "fake-indexeddb": "^6.2.5",
    "fast-text-encoding": "^1.0.6",
    "jsdom": "^27.0.1",
    "mock-socket": "^9.3.1",
    "msw": "^2.12.4",
    "playwright": "^1.57.0",
    "serve-handler": "^6.1.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^1.6.0",
    "vitest-canvas-mock": "^0.3.3",
    "whatwg-fetch": "^3.6.20"
  }
}
